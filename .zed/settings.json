        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  },
  "terminal": {
    "button": true,
    "dock": "bottom",
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
