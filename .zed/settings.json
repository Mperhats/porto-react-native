      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "TSX": {
      "language_servers": [
        "vtsls",
        "biome",
        "typescript-language-server",
        "!deno",
        "!eslint",
        "!dprint",
        "!prettier"
      ],
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JavaScript": {
      "language_servers": [
        "vtsls",
        "biome",
        "typescript-language-server",
